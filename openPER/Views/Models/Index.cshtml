@using openPER.ViewModels
@model ModelsViewModel
@{
    ViewData["Title"] = "Index";
}
@await Html.PartialAsync("_Breadcrumb", Model.Navigation.Breadcrumb)
<div class="container">
    <div class="row">
        <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
            @await Html.PartialAsync("_SidebarMenu", Model.Navigation)
        </div>
        <div class="col-lg-8 col-md-8 col-sm-12 col-xs-12">
            <table class="table table-sm table-hover">
                <thead>
                    <tr>
                        <th>Model</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Models)
                    {
                        <tr>
                            <td>
                                @Html.ActionLink(item.Description, "Index", "Catalogues", new { Model.ReleaseCode, item.MakeCode, item.SubMakeCode, ModelCode = item.Code })
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
