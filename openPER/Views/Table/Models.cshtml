@model IEnumerable<openPER.Models.ModelModel>

@{
    ViewData["Title"] = "Models";
    ViewData["Language"] = "3";
}

<h1>Models</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Code)
            </td>
            <td>
                @Html.ActionLink(item.Description, "Catalogues", new {Make=item.MakeCode, Model=item.Code})
            </td>
            <td>
<img src="@Url.Action("ModelImage", "Table", new {Model=item.Code})">
            </td>
        </tr>
}
    </tbody>
        <!-- <vc:models-widget models=Model></vc:models-widget>-->

</table>
