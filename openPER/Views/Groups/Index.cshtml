@model openPER.ViewModels.GroupsViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>GroupsView</h1>

<div>
    <h4>Groups</h4>
    <hr />
    <table class="table table-sm">
    @foreach (var group in Model.Groups)
    {
        <tr><td>@group.DisplayCode</td><td>@Html.ActionLink(group.Description, "Index", "SubGroups", new {Model.ReleaseCode,Model.MakeCode, Model.ModelCode, Model.CatalogueCode, GroupCode=group.Code})</td></tr>
    }
    </table>
</div>
