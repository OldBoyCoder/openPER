@using openPER.ViewModels;
@model BreadcrumbViewModel
<div>

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">@Html.ActionLink("HOME", "Index", "Makes", new {Model.Language})</li>
            @if (Model.MakeCode != null)
            {
                <li class="breadcrumb-item">@Html.ActionLink(Model.SubMakeDescription, "Index", "Models", new {Model.Language, Model.MakeCode, Model.SubMakeCode })</li>
                @if (Model.ModelCode != null)
                {
                    <li class="breadcrumb-item">@Html.ActionLink(Model.ModelDescription, "Index", "Catalogues", new { Model.Language, Model.MakeCode, Model.SubMakeCode, Model.ModelCode })</li>
                    @if (Model.CatalogueDescription != null)
                    {
                        <li class="breadcrumb-item">@Html.ActionLink($"{Model.CatalogueCode} {Model.CatalogueDescription}", "Index", "Groups", new {Model.Language,  Model.MakeCode, Model.SubMakeCode, Model.ModelCode, Model.CatalogueCode })</li>
                        @if (Model.GroupCode != null & Model.GroupDescription != null)
                        {
                            <li class="breadcrumb-item">@Html.ActionLink($"{Model.GroupCode.Value:000} {Model.GroupDescription}", "Index", "SubGroups", new {Model.Language, Model.MakeCode, Model.SubMakeCode, Model.ModelCode, Model.CatalogueCode, Model.GroupCode })</li>
                            @if (Model.SubGroupCode != null && Model.SubGroupDescription != null)
                            {
                                <li class="breadcrumb-item">@Html.ActionLink($"{Model.GroupCode.Value:000}{Model.SubGroupCode.Value:00} {Model.SubGroupDescription}", "Index", "SubSubGroups", new {Model.Language,Model.MakeCode, Model.SubMakeCode, Model.ModelCode, Model.CatalogueCode, Model.GroupCode, Model.SubGroupCode })</li>
                                @if (Model.SubSubGroupCode != null)
                                {
                                    <li class="breadcrumb-item">@Html.ActionLink($"{Model.GroupCode.Value:000}{Model.SubGroupCode.Value:00}/{Model.SubSubGroupCode:00} {Model.SubSubGroupDescription}", "Detail", "Drawings", new { Model.Language, Model.MakeCode, Model.SubMakeCode, Model.ModelCode, Model.CatalogueCode, Model.GroupCode, Model.SubGroupCode, Model.SubSubGroupCode, DrawingNumber = 1 })</li>
                                    @if (Model.DrawingNumber != null)
                                    {
                                        <li class="breadcrumb-item">
                                            @Html.ActionLink(Model.DrawingNumber.ToString(), "Detail", "Drawings", new { Model.Language, Model.MakeCode, Model.SubMakeCode, Model.ModelCode, Model.CatalogueCode, Model.GroupCode, Model.SubGroupCode, Model.SubSubGroupCode, Model.DrawingNumber })
                                        </li>
                                        @if (Model.ClichePartNumber != null)
                                        {
                                            <li class="breadcrumb-item">
                                                @Html.ActionLink(Model.ClichePartNumber.ToString(), "Detail", "Cliche", new {Model.Language,  Model.MakeCode, Model.SubMakeCode, Model.ModelCode, Model.CatalogueCode, Model.GroupCode, Model.SubGroupCode, Model.SubSubGroupCode, DrawingNumber = Model.DrawingNumber, ClichePartNumber = Model.ClichePartNumber, ClicheDrawingNumber=1})
                                            </li>
                                            @if (Model.ClicheDrawingNumber != null)
                                            {
                                                <li class="breadcrumb-item">
                                                    @Html.ActionLink(Model.ClicheDrawingNumber.ToString(), "Detail", "Cliche", new {Model.Language,  Model.MakeCode, Model.SubMakeCode, Model.ModelCode, Model.CatalogueCode, Model.GroupCode, Model.SubGroupCode, Model.SubSubGroupCode, DrawingNumber = Model.DrawingNumber, ClichePartNumber = Model.ClichePartNumber, ClicheDrawingNumber=Model.ClicheDrawingNumber })
                                                </li>

                                            }

                                        }
                                    }

                                }
                            }
                        }
                    }
                }
            }
        </ol>
    </nav>
</div>