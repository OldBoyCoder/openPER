@{
}
@model openPER.ViewModels.ClicheViewModel

@{
    ViewData["Title"] = "Index";
}
@await Html.PartialAsync("_Breadcrumb", Model.Breadcrumb)
<div class="container">
    <div class="row">
        <div class="col-lg-6 col-md-12 col-sm-12 col-12">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <img class="img-fluid" src="@Url.Action("Drawing", "Image", new {Model.ReleaseCode, ClichePartNumber = Model.ClicheDrawings.First(x=>x.ClichePartDrawingNumber==Model.CurrentDrawing).ClichePartNumber,  ClichePartDrawingNumber = Model.CurrentDrawing})">
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <div class="container horizontal-scrollable">
                            <div class="row text-center">
                                @{
                                    @foreach (var drawing in Model.ClicheDrawings)
                                    {
                                        <div class="col-xs-4">
                                            <img class="img-fluid" src="@Url.Action("Thumbnail", "Image", new {Model.ReleaseCode, drawing.ClichePartNumber, drawing.ClichePartDrawingNumber })"><br />
                                            @Html.ActionLink("Go", "Detail", "Cliche", new { Model.ReleaseCode, Model.Breadcrumb.MakeCode, Model.Breadcrumb.SubMakeCode, Model.Breadcrumb.ModelCode, Model.Breadcrumb.CatalogueCode, Model.Breadcrumb.GroupCode, Model.Breadcrumb.SubGroupCode, Model.Breadcrumb.SubSubGroupCode, DrawingNumber = Model.Breadcrumb.DrawingNumber, ClichePartNumber = drawing.ClichePartNumber, ClicheDrawingNumber=drawing.ClichePartDrawingNumber })</div>
                                    }
                                }
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
        <div class="col-lg-6 col-md-12 col-sm-12 col-12">
            <table class="table table-sm">
                <tr><th>&nbsp;</th><th>Prod. code</th><th>Fur. Descr.< /th><th>Comp.</th><th>Modif.</th><th>Qty</th><th>Notes</th></tr>
                @{

                    int lastOrder = 999;
                    @foreach (var item in Model.CurrentClicheDrawing.Parts)
                    {
                        if (item.TableOrder != lastOrder)
                        {
                            <tr><td>@Html.DisplayFor(model => item.TableOrder)</td><td colspan="7">@Html.DisplayFor(model => item.Description)</td></tr>
                            lastOrder = item.TableOrder;
                        }
                        <tr>
                            <td>&nbsp;</td>
                            <td ><a href="@Url.Action("SearchResults", "Part", new { item.PartNumber })">@Html.DisplayFor(model => item.PartNumber)</a> <a href="https://www.google.com/search?q=FIAT+@item.PartNumber" target="_blank" class="bi bi-search"></a></td>
                            <td>@Html.DisplayFor(model => item.FurtherDescription)</td>
                            <td>@Html.DisplayFor(model => item.Compatibility)</td>
                            <td>
                                <ul>
                                    @foreach (var mod in item.Modifications)
                                    {
                                        <li title="@mod.FullDescription">@Html.DisplayFor(model => mod.Type)@Html.DisplayFor(model => mod.Code)</li>
                                    }
                                </ul>
                            </td>
                            <td>@Html.DisplayFor(model => item.Quantity)</td>
                            <td>@Html.DisplayFor(model => item.Notes)</td>
                        </tr>
                    }
                }
            </table>
        </div>
    </div>
</div>

